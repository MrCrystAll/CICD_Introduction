<Application x:Class="App_Intro.views.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:App_Intro"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
         <system:Double x:Key="H1">36</system:Double>
         <system:Double x:Key="H2">24</system:Double>
         <system:Double x:Key="H3">16</system:Double>
        
        <Style x:Key="Title" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{StaticResource H1}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        
        <Style x:Key="ListItemHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{StaticResource H3}"/>
            <Setter Property="FontWeight" Value="ExtraBlack"></Setter>
        </Style>
    </Application.Resources>
</Application>
