<UserControl x:Class="App_Intro.views.OnePokemonLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Border BorderBrush="LightGray" BorderThickness="0.5" CornerRadius="10" Padding="3">
        <StackPanel Width="100" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="{Binding Path=Pokemon.Sprite, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            <TextBlock Text="{Binding Path=Pokemon.Name.English, RelativeSource={RelativeSource AncestorType=UserControl}}" TextAlignment="Center"/>
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="30" Margin="0,5,0,0">
                <Image Source="{Binding Path=Pokemon.TypesSprites[0], RelativeSource={RelativeSource AncestorType=UserControl}}" Height="15"/>
                <Image Source="{Binding Path= Pokemon.TypesSprites[1], RelativeSource={RelativeSource AncestorType=UserControl}}" Name="SecondType" Height="15"/>
            </WrapPanel>
        </StackPanel>
    </Border>  
</UserControl>
